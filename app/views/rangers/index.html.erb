<div class='container'>

  <% if notice %>
    <div id="notice" class='alert alert-success'><%= notice %></div>
  <% end %>

  <h1>rangers</h1>

  <table class='col-md-12 table table-hover'>
    <thead>
      <tr>
        <th colspan='1'>No</th>
        <th class='col-md-6'>Ranger Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% count = 0 %>
      <% @rangers.each do |ranger| %>
        <% count += 1%>
        <tr>
          <td class='h4'><%= count %></td>
          <td class='h4'><%= ranger.name %></td>
          <td><%= link_to 'Show', ranger %></td>
          <td><%= link_to 'Edit', edit_ranger_path(ranger) %></td>
          <td><%= link_to 'Destory', ranger, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
</table>

<br>


</div>
